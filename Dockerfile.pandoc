FROM silkeh/latex:full

ENV PANDOC_VERSION 2.4

RUN wget -q "https://github.com/jgm/pandoc/releases/download/${PANDOC_VERSION}/pandoc-${PANDOC_VERSION}-linux.tar.gz" && \
    tar xf "pandoc-${PANDOC_VERSION}-linux.tar.gz" && \
    rsync -r "pandoc-${PANDOC_VERSION}/" /usr/local/ && \
    rm -r "pandoc-${PANDOC_VERSION}/" "pandoc-${PANDOC_VERSION}-linux.tar.gz"
